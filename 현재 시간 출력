import java.io.*;


public class Example {
  //현재 시간을 문자열로 출력하는 변수
  static String timerBuffer; 
  //정수형 시간
  static int oldTime; 

  //main메서드
  public static void main(String[] args) {
    //스톱워치 시작
    //stopwatch()에 1이 들어가면 시작됨
    stopwatch(1); 
    System.out.println("Timer ON! 엔터 키를 누르면 종료합니다");

    //스톱워치 끝(엔터키를 눌렀을 때)
    //stopwatch()에 0이 들어가면 끝남
    pause(); 
    stopwatch(0); 
    //format : 현재 값 초기화 
    System.out.format("Timer OFF! 경과 시간: [%s]%n", timerBuffer); 
  }

  //스톱워치 메서드
  public static void stopwatch(int onOff) {
    // 타이머 켜기
    if (onOff == 1) 
      oldTime = (int) System.currentTimeMillis() / 1000;
    // 타이머 끄고, 시분초를 timerBuffer 에 저장
    if (onOff == 0) 
      secToHHMMSS(  ((int) System.currentTimeMillis() / 1000) - oldTime  );

  }


  // 정수로 된 시간을 문자열로 현재 시분초를 저장
  public static void secToHHMMSS(int secs) {
    int hour, min, sec;
    //초(60으로 나눈 후 나머지 저장) 
    sec  = secs % 60;
    //분(60으로 나눈 후 나머지 저장) 
    min  = secs / 60 % 60;
    //시간(3600으로 나눈 후 나머지 저장) 
    hour = secs / 3600;

    //현재 시간을 문자열로 출력
    timerBuffer = String.format("%02d:%02d:%02d", hour, min, sec);
  }

  //엔터키를 눌렀을 때(스톱워티를 정지시킬 때) 메서드
  public static void pause() {
    try {
      System.in.read();
    } catch (IOException e) { }
  }


}
